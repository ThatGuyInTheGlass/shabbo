<div class="container devise_sessions_new">

  <%= image_tag "Shabbo.svg", class: " log-in-logo d-flex align-content-center" %>
  <div class="login align-content-center">
  <h1 class="text-center">Login</h1>
</div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
    required: false,
    autofocus: true,
    input_html: { autocomplete: "email", class: "test-class"}%>
    <%= f.input :password,
    required: false,
    input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <div class= "log-in">
    <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
  </div>
  </div>
  <% end %>
  <div class="form-annotation">
    <%= render "devise/shared/links" %>
  </div>
</div>
