<div class="container-weekend">

  <div class="dashboard-banner">
    <div class="dashboard-banner-text">
      <h1 class="page-title-entry-title text-center">Your plan for the weekend!</h1>
    </div>
  </div>

  <% @bookings.each do |booking| %>
    <div class="card-weekend mb-2">
      <div class="d-flex">
        <div class="weekend-image">
          <%= cl_image_tag booking.activity.image, height: 150, width: 100, crop: :fill %>
        </div>
        <div class="weekend-info p-2">
          <div class="d-flex justify-content-between">
            <h4><%=link_to booking.activity.title.truncate(18,separator: " "), booking.activity %></h4>
            <%= link_to booking_path(booking), method: :delete, data: { confirm: 'Are you sure you want to delete this booking?' } do %>
              <p class="x-button">X</p>
            <% end %>
          </div>
          <div class="d-flex justify-content-between">
            <div class="d-flex flex-column justify-content-between" style="height: 88px">
              <p><%=booking.activity.day %></p>
                <div class="stars"><% booking.activity.rating_average.to_i.times do  %>
                  <i class="fas fa-star"></i>
                <% end %>
                </div>
              <p class="m-0"><%= booking.activity.address.truncate(35) %></p>
            </div>
            <div class="weekend-btn d-flex align-items-end">
              <% unless booking.activity.url.blank? %>
                <a href="http://<%= booking.activity.url %>" target="_blank" class="info-link">
                <p class="btn x-button m-0 p-0"><i class="fas fa-info-circle"></i></p></a>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
