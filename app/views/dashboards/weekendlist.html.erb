<div class="container-weekend">

<div class="dashboard-banner"  >
  <div class="dashboard-banner-text">
    <h1 class="page-title-entry-title">Your Weekend List</h1>
    <p class="page-sub-title">All of your selected </p>
  </div>
</div>
<br>

<div class="container">
  <div class="row">
    <% @bookings.each do |booking| %>
    <div class=>
      <div class="card-weekend">
        <div class="d-flex">
        <%=link_to "#", class: "weekend-card-intern" do %>
          <%= cl_image_tag booking.activity.image, height: 110 %>
        <%end%>
        <div class="weekend-info">
            <h2><%=link_to booking.activity.title.truncate(18,separator: " "), booking.activity %></h2>
          <h3><%= booking.activity.address.truncate(35) %></h3>
          <div class="rating-weekend">
          <% booking.activity.rating_average.to_i.times do  %>
              <i class="fas fa-star"></i>
            <% end %>
          </div>
          </div>
          </div>
          <div>
            <div class="weekend-btn align-content-right">
            <td>
            <%= link_to booking_path(booking), method: :delete, data: { confirm: 'Are you sure you want to delete this booking?' } do %>
              <p class="btn btn-warning">Unbook</p>
              <%end%>
            </td>
          </div>
          </div>
          <div>
        </div>
    </div>
  </div>
    <% end %>
  </div>
</div>
