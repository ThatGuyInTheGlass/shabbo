<div class="profile-frame">
  <div class="d-flex flex-column align-items-center profile-center">
    <div class="avatar-profile">
      <%= cl_image_tag @current_user.avatar, class: "avatar" %>
    </div>
    <div class="avatar-name">
      <%= @current_user.first_name %>
    </div>
    <h9> Interests </h9>
    <div class= "d-flex ">
    <% UserCategory.where(user: current_user).each do |uc| %>
      <p><%= uc.category.name %> |</p>
      <% end %>
    </div>
      <h9> Email </h9>
      <%= @current_user.email %>
      <div id='signout'>
        <%= link_to 'Log out', destroy_user_session_path, method: :delete %>
      </div>

    <div class="user-categories d-flex justify-content-around">
      <p class="p-3"><%= @current_user.first_name %>'s activities</p>
    </div>
    <div class="content mb-5">
      <div class="d-flex row-cards">
        <% Activity.where(user: @current_user).each do |activity| %>
          <div class="card-trip">
            <%= link_to activity, class: "card-img" do %>
              <%= cl_image_tag activity.image, height: 100 %>
            <% end %>
            <div class="card-trip-infos">
              <div>
                <h2><%=link_to activity.title.truncate(18,separator: " "), activity %></h2>
                <% activity.rating_average.to_i.times do  %>
                  <i class="fas fa-star"></i>
                <% end %>
                <p class="activityaddress"><%= activity.address%></p>
                <div class="deleteservice">
                  <td>
              <%= link_to  activity, method: :delete, data: { confirm: 'Are you sure you want to delete this activity?' } do %>
              <p class="btn btn-warning">Delete this service</p>
              <%end%>
            </td>
          </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
