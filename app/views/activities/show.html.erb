
<%= cl_image_tag @activity.image, class: "show-img" %>
<%= link_to 'Book Now', activity_bookings_path(@activity), method: :post, class: "btn-primary", id: "bookbtn"%>

<h1>  <%= @activity.title %> </h1>
<p> Shared by:<%= link_to @activity.user.username, profile_path(@activity.user) %></p>
<h2> About </h2>
<%=@activity.description %>
<br>
<br>
<br>
<h2> Reviews </h2>
<%= link_to new_activity_review_path(@activity) do %>
<p class="btn btn-primary text-right">Add review</p>
<%end%>
<div class="reviews d-flex align-items-baseline justify-content-center">
  <div class="review-cont">
    <% @activity.reviews.each do |review| %>
    <div class="review-card">
      <div class="review-card-top flex-column mb-0">
          <p class="text-left"> <%= cl_image_tag review.user.avatar, class: "review-avatar" %> </p>
        <div class=" justify-content-between">
        <div class ="review-name">
          <p class="text-left"> by <%= review.user.first_name %> </p>
        </div>
        <p class="text-left"> <strong><%= review.title %></strong>  </p>
        </div>
        <p>Rating:</p>
        <div class="rating-stars d-flex">
        <% @activity.rating_average.to_i.times do  %>
              <i class="fas fa-star"></i>
            <% end %>
          </div>
      </div>
      <div class="review-card-bottom">
        <p>Description:</p>
        <div class= "review-text">
        <p class="text-left"> <%= review.description %> </p>
      </div>

      </div>
    </div>
    <% end %>
  </div>
</div>
</div>
</div>
<br>
<br>
<br>
