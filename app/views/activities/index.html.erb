<div class="navbar navbar-expand-sm navbar-light navbar-lewagon align-content-center text-center">
  <div class="index-navbar align-content-center d-flex">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "shabbo.png" %>
    <% end %>
  </div>
</div>
<div class="content mb-5">
  <div class="d-flex" style="overflow-x: scroll;">
    <% @activities.each do |activity| %>
      <div class="card-trip">
        <%= link_to activity, class: "card-img" do %>
          <%= cl_image_tag activity.image, height: 80, crop: "fill" %>
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2><%=link_to activity.title, activity %></h2>
            <% activity.rating_average.to_i.times do  %>
              <i class="fas fa-star"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %> <!-- activity -->
  </div> <!-- d-flex -->
</div>
